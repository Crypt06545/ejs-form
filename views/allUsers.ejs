<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="min-h-screen bg-zinc-900 p-10 text-white">
        <div>
            <a class="text-blue-500" href="/">Back To Home</a>
          </div>
      <h1 class="text-zinc-400 text-center text-2xl mb-10">All users</h1>
      <div class="grid grid-cols-4 gap-5">
       <% users.forEach((user)=>{ %>
        <div class="w-72 p-4 bg-zinc-800 rounded-lg">
            <div>
                <img class="w-full h-64 object-cover rounded-lg" src=" <%= user.image %> " alt="">
            </div>
            <h3 class="text-xl mt-3 tracking-tighter"> <%= user.name%> </h3>
            <h5 class="text-zinc-500"><%= user.email %></h5>
            <div class="flex mt-10 gap-3">
              <a class="text-zinc-200" href="/update">Edit User</a>
              <a class="text-red-500" href="/delete/<%= user._id %>" meth>Delete User</a>
            </div>
          </div>
       <% }) %>
        
      </div>
    </div>
  </body>
</html>
